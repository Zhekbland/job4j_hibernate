<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/advertstockxml</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">password</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <property name="show_sql">true</property>
        <mapping resource="ru/job4j/models/User.hbm.xml" />
        <mapping resource="ru/job4j/models/Car.hbm.xml" />
        <mapping resource="ru/job4j/models/carmodels/CarMake.hbm.xml" />
        <mapping resource="ru/job4j/models/carmodels/Model.hbm.xml" />
        <mapping resource="ru/job4j/models/carmodels/BodyType.hbm.xml" />
        <mapping resource="ru/job4j/models/carmodels/EngineType.hbm.xml" />
        <mapping resource="ru/job4j/models/carmodels/GearboxType.hbm.xml" />
        <mapping resource="ru/job4j/models/carmodels/Picture.hbm.xml" />
    </session-factory>
</hibernate-configuration>